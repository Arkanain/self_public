- if @article.errors.full_messages.any?
  - @article.errors.full_messages.each do |error|
    .error
      = error


= form_for @article do |f|
  .form_field
    = f.label :title
    = f.text_field :title

  .form_field
    = f.label :text
    = f.text_area :text, rows: 15, class: 'tinymce'
    = tinymce(menubar: false)

  = f.hidden_field :user_id, value: current_user.id

  .form_field
    = f.submit class: 'button success'
    = link_to 'Back', articles_path, class: 'button form_back alert'